<?xml version="1.0" encoding="UTF-8"?>
<config
        xmlns='http://www.ehcache.org/v3'
        xmlns:jsr107='http://www.ehcache.org/v3/jsr107'>

    <service>
        <jsr107:defaults enable-management="true" enable-statistics="true"/>
    </service>

    <cache-template name="default">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache-template>

    <!-- Entity caches -->
    <cache alias="com.healthy.backend.entity.Users" uses-template="default">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache>

    <cache alias="com.healthy.backend.entity.Students" uses-template="default">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">200</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <cache alias="com.healthy.backend.entity.Psychologists" uses-template="default">
        <expiry>
            <ttl unit="hours">2</ttl>
        </expiry>
        <resources>
            <heap unit="entries">50</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache>

    <cache alias="com.healthy.backend.entity.Programs" uses-template="default">
        <expiry>
            <ttl unit="hours">6</ttl>
        </expiry>
        <resources>
            <heap unit="entries">50</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache>

    <cache alias="com.healthy.backend.entity.Surveys" uses-template="default">
        <expiry>
            <ttl unit="hours">12</ttl>
        </expiry>
        <resources>
            <heap unit="entries">30</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache>

    <!-- Query caches -->
    <cache alias="default-query-results-region" uses-template="default">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache>

</config> 