import mockit.Expectations;
import mockit.Tested;
import mockit.Verifications;
import org.junit.Test;

import static org.junit.Assert.assertEquals;

public class MockingExample {
    @Tested
    MyClass myClass;
    @Test
    public void testMethod() {
        // Định nghĩa hành vi mong đợi
        new Expectations() {{
            myClass.someMethod(); result = 10;  // Mong đợi phương thức someMethod() trả về 10
        }};
        // Gọi phương thức cần kiểm thử
        int result = myClass.someMethod();
        assertEquals(10, result);

        // Kiểm tra xem phương thức đã được gọi 1 lần
        new Verifications() {{
            myClass.someMethod(); times = 1;
        }};
    }
}
